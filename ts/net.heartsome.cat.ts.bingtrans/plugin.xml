<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="net.heartsome.cat.ts.tm.simplematch.extension">
      <simpleMatcher
            class="net.heartsome.cat.ts.bingtrans.SimpleMatcherBingImpl"
            name="BingTranslation">
      </simpleMatcher>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="net.heartsome.cat.ts.ui.preferencepage.translation.TranslationPreferencePage"
            class="net.heartsome.cat.ts.bingtrans.preference.BingPreferencePage"
            id="net.heartsome.cat.ts.bingtrans.preferencepage"
            name="%preferencePages.bingTrans">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.heartsome.cat.ts.bingtrans.preference.BingTransPreferenceInitializer">
      </initializer>
   </extension>
  <extension
         point="org.eclipse.ui.menus">
         <menuContribution
            allPopups="false"
            locationURI="menu:net.heartsome.cat.ts.menu.translation?after=net.heartsome.cat.ts.ui.xliffeditor.menu.translation.bingSeparator">
         <command
               commandId="net.heartsome.cat.ts.bingtrans.command.execute"
               label="%menu.executeTrans"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="net.heartsome.cat.ts.ui.category.translation"
            id="net.heartsome.cat.ts.bingtrans.command.execute"
            name="%command.executeTrans">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.heartsome.cat.ts.bingtrans.handler.ExecuteBingTransHandler"
            commandId="net.heartsome.cat.ts.bingtrans.command.execute">
            <enabledWhen>
            <test
                  property="xliffEditor.selectionCount">
            </test>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="net.heartsome.cat.ts.bingtrans.command.execute"
            icon="images/bing_trans.png">
      </image>
   </extension>

</plugin>
