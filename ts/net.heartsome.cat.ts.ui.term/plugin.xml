<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="net.heartsome.cat.ts.ui.term.view.TerminologyViewPart"
            icon="images/term-view/tb_title.png"
            id="net.heartsome.cat.ts.ui.term.view.termView"
            name="%termView.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="net.heartsome.cat.ts.perspective">
         <view
               id="net.heartsome.cat.ts.ui.term.view.termView"
               minimized="false"
               ratio="0.65"
               relationship="bottom"
               relative="net.heartsome.cat.ts.ui.translation.view.matchview"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:net.heartsome.cat.ts.menu.viewMenu?after=net.heartsome.cat.ts.tbSeparator">
         <command
               commandId="net.heartsome.cat.ts.ui.term.command.openTermView"
               label="%menu.view.TBView"
               style="push">
            <parameter
                  name="ViewId"
                  value="net.heartsome.cat.ts.ui.term.view.termView">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:net.heartsome.cat.ts.menu.translation?after=net.heartsome.cat.ts.ui.xliffeditor.nattable.AddTermSeparator">
         <command
               commandId="net.heartsome.cat.ts.ui.term.command.AddTermToTB"
               label="%menu.translation.addTerm"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=group.addTerm">
         <toolbar
               id="net.heartsome.cat.ts.ui.term.toolbar.addTerm">
            <command
                  commandId="net.heartsome.cat.ts.ui.term.command.AddTermToTB"
                  icon="images/tool/add-term.png"
                  label="%toolBar.addTerm"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="net.heartsome.cat.ts.viewMenu.category1"
            defaultHandler="net.heartsome.cat.common.ui.handlers.OpenViewHandler"
            id="net.heartsome.cat.ts.ui.term.command.openTermView"
            name="%command.TBView">
         <commandParameter
               id="ViewId"
               name="ViewId"
               optional="false">
         </commandParameter>
      </command>
      <command
            categoryId="net.heartsome.cat.ts.ui.category.translation"
            id="net.heartsome.cat.ts.ui.term.command.AddTermToTB"
            name="%command.addTerm">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="net.heartsome.cat.ts.ui.term.command.AddTermToTB"
            icon="images/translate/add-term.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="net.heartsome.cat.ts.ui.term.command.AddTermToTB"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="net.heartsome.cat.common.ui.shield.defaultAcceleratorConfiguration"
            sequence="M1+T">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.heartsome.cat.ts.ui.term.handler.AddTermToTBHandler"
            commandId="net.heartsome.cat.ts.ui.term.command.AddTermToTB">
         <enabledWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="net.heartsome.cat.ts.ui.xliffeditor.nattable.editor">
               </equals>
            </with>
         </enabledWhen>
      </handler>
   </extension>

</plugin>
